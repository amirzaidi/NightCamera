<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fullscreen_content"
    android:background="@color/colorBackground"
    android:keepScreenOn="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/switcher"
            android:layout_width="@dimen/semishutter_size"
            android:layout_height="@dimen/semishutter_size"
            android:clickable="true"
            android:focusable="true"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            app:backgroundTint="@color/colorFabs"
            app:borderWidth="0dp"
            app:fabSize="normal"
            app:srcCompat="@drawable/swapper_vector_rotated" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/shutter"
            android:layout_width="@dimen/shutter_size"
            android:layout_height="@dimen/shutter_size"
            android:layout_marginLeft="@dimen/shutter_margin"
            android:layout_marginRight="@dimen/shutter_margin"
            android:clickable="true"
            android:focusable="true"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            app:backgroundTint="@color/colorFabs"
            app:borderWidth="0dp"
            app:fabSize="mini"
            app:srcCompat="@drawable/shutter" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/video"
            android:layout_width="@dimen/semishutter_size"
            android:layout_height="@dimen/semishutter_size"
            android:clickable="true"
            android:focusable="true"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            app:backgroundTint="@color/colorFabs"
            app:borderWidth="0dp"
            app:fabSize="normal"
            app:srcCompat="@drawable/video_vector" />
    </LinearLayout>

</LinearLayout>
